<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

    <NumberPicker
        android:id="@+id/numberPickerSixDigits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

	<NumberPicker 
	    android:id="@+id/numberPickerFiveDigits" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
	
	<NumberPicker 
	    android:id="@+id/numberPickerQuadrupleDigits" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
	
	<NumberPicker 
	    android:id="@+id/numberPickerTripleDigits" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
	
	<NumberPicker 
	    android:id="@+id/numberPickerDoubleDigits" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
	
	<NumberPicker 
	    android:id="@+id/numberPickerSingleDigit" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:text="@string/micro_second" />

</LinearLayout>

