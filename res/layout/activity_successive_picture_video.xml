<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="fitCenter"
      	android:adjustViewBounds="true"
      	android:src="@drawable/mainbuttonsrtop"
        android:contentDescription="@string/description"
        android:onClick="onClickPictureView"
        android:text="@string/PictureView" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="fitCenter"
      	android:adjustViewBounds="true"
      	android:src="@drawable/mainbuttonsvtop"
        android:contentDescription="@string/description"
        android:onClick="onClickThumbnail"
        android:text="@string/Thumbnail" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="fitCenter"
      	android:adjustViewBounds="true"
      	android:src="@drawable/mainbuttonssettings"
        android:contentDescription="@string/description"
        android:onClick="onClickSettings"
        android:text="@string/action_settings" />

</LinearLayout>